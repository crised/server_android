<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <!-- The datasource is bound into JNDI at this location. We reference this
        in META-INF/persistence.xml -->
    <datasource jndi-name="java:jboss/datasources/sparkDS" pool-name="spark" enabled="true" use-java-context="true">
        <connection-url>jdbc:postgresql:spark</connection-url>
        <driver>postgresql-jdbc4</driver>
        <security>
            <user-name>spark</user-name>
            <password>spark</password>
        </security>
    </datasource>
</datasources>
 
